- @page_title = "#{t('shoppe.localisations.localisations')} - #{@exhibition.name}"

= content_for :header do
  %p.buttons
    = link_to t('shoppe.localisations.back'), [:edit, @exhibition], :class => 'button'
    = link_to t('shoppe.localisations.new_localisation'), [:new, @exhibition, :localisation], :class => 'button green'

  %h2.users= t('shoppe.localisations.localisations_of', name: @exhibition.name)

.table
  %table.data
    %thead
      %tr
        %th{:width => '20%'}= t('shoppe.localisations.language')
        %th{:width => '50%'}= t('shoppe.exhibitions.name')
        %th{:width => '15%'}= t('shoppe.exhibitions.permalink')
    %tbody
      - if @localisations.empty?
        %tr.empty
          %td{:colspan => 4}= t('shoppe.localisations.no_localisations')
      - else
        - for localisation in @localisations
          %tr
            %td= localisation.locale
            %td= link_to localisation.name, edit_exhibition_localisation_path(@exhibition, localisation)
            %td= localisation.permalink
